{
  "name": "vrc-video-log-viewer",
  "private": true,
  "version": "0.0.1",
  "buildVersion": "1",
  "type": "module",
  "description": "VRChat Video Log Viewer for Mac, Windows, and Linux",
  "author": "Mika <mika@vrugd.jp>",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build:web": "npm run clean && vite build",
    "build": "npm run clean && vite build && electron-builder",
    "clean": "rimraf dist release",
    "lint": "eslint .",
    "preview": "vite preview",
    "app:build": "npm run clean && vite build && electron-builder --mac --win --linux",
    "app:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\""
  },
  "build": {
    "appId": "com.vrchat.vrclogviewer",
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": ["nsis", "zip"],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-Setup-${version}-v${buildVersion}-${arch}.${ext}"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "build/icon.png"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    }
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/material": "^7.3.4",
    "chokidar": "^4.0.3",
    "dayjs": "^1.11.18",
    "js-yaml": "^4.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "electron": "^38.2.1",
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "rimraf": "^5.0.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "wait-on": "^9.0.1"
  }
}
